@link(
    url: "https://specs.apollo.dev/federation/v2.7",
    import: ["@key" ]
) {
    query: Query
}

type Product @key(fields: "id") {
  id: ID!
}

type Review @key(fields: "id") {
  id: Int!
  body: String!
  product: Product!
}

type Query {
  review(id: Int!): Review
}

type Subscription {
  reviewAdded: Review
}
